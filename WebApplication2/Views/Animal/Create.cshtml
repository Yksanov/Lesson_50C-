@model Animal
@{
    ViewBag.Title = "Add new Animal";
}

<h2>Fill out the form to add an animal</h2>
<div class="row">
    <div class="container phone_add_form col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="Name">
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Age</label>
                <input asp-for="Age" type="number" class="form-control" id="Age">
            </div>
            <div class="mb-3">
                <label for="Type" class="form-label">Type</label>
                <input asp-for="Type" type="text" class="form-control" id="Type">
            </div>
            <div class="mb-3">
                <label for="Color" class="form-label">Color</label>
                <input asp-for="Color" type="text" class="form-control" id="Color">
            </div>
            <div class="mb-3">
                <label for="Weight" class="form-label">Weight</label>
                <input asp-for="Weight" type="text" class="form-control" id="Weight">
            </div>
            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-control" id="Price">
            </div>
            <div class="mb-3">
                <label class="form-label">Image</label>
                <input asp-for="Image" type="file" name="filename" accept="image/*" />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>